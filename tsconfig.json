{
  "compilerOptions": {
    "target": "es2020",                              
    "module": "commonjs",                            
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true                             
  },
  "include": ["src/**/*"],  // Incluir todos los archivos en la carpeta src
  "exclude": ["node_modules"]  // Excluir node_modules
}
